<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD com.example.Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "top.oahnus.mapper.primary.SysRoleMapper">
    <resultMap id = "sysRoleMap" type= "top.oahnus.domain.primary.SysRole">
        <id property = "id" column = "id" javaType="Long" jdbcType="BIGINT"/>
        <result property = "name" column = "name" javaType="String"/>
        <result property = "desc" column = "desc" javaType="String"/>
        <result property = "enable" column = "enable" javaType="Boolean"/>
        <collection property="permissions" resultMap="spMap"/>
    </resultMap>

    <resultMap id="spMap" type="top.oahnus.domain.primary.SysPermission">
        <id column="sp.id" property="id" javaType="Long"/>
        <result column="sp.name" property="name" javaType="String"/>
        <result column="sp.desc" property="desc" javaType="String"/>
        <result column="sp.permission" property="permission" javaType="String"/>
        <result column="sp.enable" property="enable" javaType="Boolean"/>
    </resultMap>

    <sql id="base">
        SELECT sr.*,
        sp.id `sp.id`, sp.name `sp.name`, sp.desc `sp.desc`, sp.permission `sp.permission`, sp.enable `sp.enable`
        FROM sys_role sr
        LEFT JOIN role_permission rp ON rp.role_id = sr.id
        LEFT JOIN sys_permission sp ON rp.permission_id = sp.id
    </sql>

    <select id="findById" resultMap="sysRoleMap" parameterType="Long">
        <include refid="base"/> WHERE sr.id = #{_parameter}
    </select>
</mapper>