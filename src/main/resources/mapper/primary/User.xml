<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD com.example.Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace = "top.oahnus.mapper.primary.UserMapper">
    <resultMap id = "userAuthMap" type= "top.oahnus.domain.primary.User">
        <result property = "id" column = "id" javaType="Long"/>
        <result property = "username" column = "username"/>
        <result property = "pwdHash" column = "pwd_hash"/>
        <result property = "salt" column = "salt"/>
        <result property = "userId" column="user_id"/>
        <result property = "sex" column="sex"/>
        <result property = "lastPasswordReset" column="last_password_reset"/>

        <collection property="roles" column="id" select="findRolesByUserAuthId"/>
    </resultMap>
    
    <select id="findRolesByUserId" resultMap="srMap">
        select sr.* FROM sys_role sr LEFT JOIN user_role ur ON ur.user_id = #{id} AND sr.id = ur.role_id
    </select>

    <resultMap id = "srMap" type= "top.oahnus.domain.primary.SysRole">
        <id property = "id" column = "id" javaType="Long" jdbcType="BIGINT"/>
        <result property = "name" column = "name" javaType="String"/>
        <result property = "desc" column = "desc" javaType="String"/>
        <result property = "enable" column = "enable" javaType="Boolean"/>
        <collection property="permissions" column="id" select="findPermByRoleId"/>
    </resultMap>

    <select id="findPermByRoleId" resultMap="spMap">
        SELECT sp.* FROM sys_permission sp LEFT JOIN role_permission rp ON rp.role_id = #{id} AND sp.id = rp.permission_id
    </select>

    <resultMap id="spMap" type="top.oahnus.domain.primary.SysPermission">
        <id column="id" property="id" javaType="Long"/>
        <result column="name" property="name" javaType="String"/>
        <result column="desc" property="desc" javaType="String"/>
        <result column="permission" property="permission" javaType="String"/>
        <result column="enable" property="enable" javaType="Boolean"/>
    </resultMap>

    <select id="findFirstByUsername" resultMap="userAuthMap" >
        SELECT *
        FROM user_auth
        WHERE username = #{username}
        LIMIT 1
    </select>
</mapper>